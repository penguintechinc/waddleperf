# WaddlePerf Environment Configuration
# Copy this file to .env and configure with your values

# ========================================
# Database (MariaDB Galera)
# ========================================
DB_ROOT_PASSWORD=change_me_root_password
DB_NAME=waddleperf
DB_USER=waddleperf
DB_PASS=change_me_db_password

# ========================================
# Server-to-Server Authentication
# ========================================
# Generate with: openssl rand -hex 32
MANAGER_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# ========================================
# JWT & Session Security
# ========================================
# Generate with: openssl rand -hex 32
SECRET_KEY=change_me_secret_key
JWT_SECRET=change_me_jwt_secret

# JWT token expiration (hours)
JWT_EXPIRATION_HOURS=24

# ========================================
# Authentication Settings
# ========================================
# Enable/disable authentication globally
AUTH_ENABLED=true

# Require MFA for all users (Global Admin can override per-user)
MFA_REQUIRED=false

# ========================================
# testServer Configuration
# ========================================
# Maximum concurrent tests per testServer node
MAX_CONCURRENT_TESTS=100

# Log level: debug, info, warn, error
LOG_LEVEL=info

# ========================================
# containerClient Configuration
# ========================================
# Authentication type: jwt, userpass, apikey, none
AUTH_TYPE=apikey

# API key (from user profile in managerServer UI)
AUTH_APIKEY=your-api-key-here

# OR use JWT
#AUTH_JWT=your-jwt-token-here

# OR use username/password
#AUTH_USER=your-username
#AUTH_PASS=your-password

# Auto-run interval (seconds, 0 = manual only)
RUN_SECONDS=0

# Enable/disable specific test types
ENABLE_HTTP_TEST=true
ENABLE_TCP_TEST=true
ENABLE_UDP_TEST=true
ENABLE_ICMP_TEST=true

# Device identification
DEVICE_SERIAL=auto
DEVICE_HOSTNAME=auto

# ========================================
# URLs (for local dev, leave as-is)
# ========================================
MANAGER_URL=http://localhost:5000
TESTSERVER_URL=http://localhost:8080

# ========================================
# Production Settings (comment out for dev)
# ========================================
# CORS_ORIGINS=https://example.com,https://www.example.com
# DB_HOST=mariadb-cluster.example.com
# DB_PORT=3306
# MANAGER_URL=https://manager.example.com
# TESTSERVER_URL=https://tests.example.com
