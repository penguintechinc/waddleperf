{
  "name": "@penguin/node_libs",
  "version": "1.0.0",
  "description": "Shared Node.js/TypeScript libraries for secure application development",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./validation": {
      "import": "./dist/validation/index.js",
      "types": "./dist/validation/index.d.ts"
    },
    "./security": {
      "import": "./dist/security/index.js",
      "types": "./dist/security/index.d.ts"
    },
    "./crypto": {
      "import": "./dist/crypto/index.js",
      "types": "./dist/crypto/index.d.ts"
    },
    "./http": {
      "import": "./dist/http/index.js",
      "types": "./dist/http/index.d.ts"
    },
    "./grpc": {
      "import": "./dist/grpc/index.js",
      "types": "./dist/grpc/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "validation",
    "security",
    "crypto",
    "grpc",
    "express",
    "typescript"
  ],
  "author": "Penguin Tech Inc <dev@penguintech.io>",
  "license": "AGPL-3.0",
  "homepage": "https://www.penguintech.io",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/penguintechinc/project-template.git"
  },
  "bugs": {
    "url": "https://github.com/penguintechinc/project-template/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "argon2": "^0.31.2",
    "axios": "^1.6.0",
    "uuid": "^9.0.1"
  },
  "peerDependencies": {
    "express": ">=4.18.0",
    "ioredis": ">=5.3.0",
    "@grpc/grpc-js": ">=1.9.0",
    "@grpc/proto-loader": ">=0.7.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    },
    "ioredis": {
      "optional": true
    },
    "@grpc/grpc-js": {
      "optional": true
    },
    "@grpc/proto-loader": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^1.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-prettier": "^5.1.0",
    "prettier": "^3.2.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  }
}
