# direnv configuration for go_libs
# Sets up Go environment

# Use Go module mode
export GO111MODULE=on

# Set GOPATH for local development
export GOPATH="${HOME}/go"

# Add local bin to PATH for go tools
export PATH="${GOPATH}/bin:${PATH}"

# Set the module name for development
export GO_MODULE_NAME="github.com/penguintechinc/project-template/shared/go_libs"
